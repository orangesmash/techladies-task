<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="header">
     <div class="row">
        <div class="col-xs-6"><%= Welcome! %></div>
        <div class="col-xs-1"><%= link_to 'Blog', articles_path, class: 'btn btn-default btn-lg' %></div>
     </div>
</div>

<div class="alert-bar">
    <div class="row">
        <div class="col-xs-12">
            <p class="flash"><%= flash.notice %></p>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div id="main-content" class="col-xs-10">
            <%= yield %>
        </div>
        <div class="col-xs-2">
        </div>
    </div>
</div>

</body>
</html>
